{
  "name": "portchain-terminal",
  "version": "1.0.0",
  "description": "Portchain Coding Challange (Terminal version)",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "test": "jest --watch",
    "update": "ncu -u"
  },
  "author": "Luca Bacchi (bacchilu@gmail.com)",
  "license": "ISC",
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": false,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 120,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false,
    "vueIndentScriptAndStyle": false
  },
  "devDependencies": {
    "@types/cli-table": "^0.3.2",
    "@types/humanize-duration": "^3.27.1",
    "@types/jest": "^29.5.5",
    "@types/stats-lite": "^2.2.0",
    "jest": "^29.7.0",
    "npm-check-updates": "^16.14.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "cli-table": "^0.3.11",
    "colors": "^1.4.0",
    "humanize-duration": "^3.30.0",
    "ora": "^5.4.1",
    "stats-lite": "^2.2.0"
  }
}
